{
    "name": "NTUST Transcript Generator",
    "description": "利用台科大學生資訊系統的資料生成成績單",
    "version": "0.0.1",
    "manifest_version": 2,
    "icons": {
        "16": "icon/16.png",
        "32": "icon/32.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "content_scripts": [{
        "matches": ["*://stuinfo8.ntust.edu.tw/ntust_stu/Query_Score.aspx"],
        "js": [
            "main.js"
        ]
    }],
    "permissions": [
        "storage"
    ],
    "web_accessible_resources": [
        "code-en.json"
    ],
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-3.4.1.slim.min.js https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js; object-src 'self';"
}